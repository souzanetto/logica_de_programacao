algoritmo "Idade para votar"
var
     idade: inteiro
inicio
      Escreva("Qual é a sua idade? ")
      leia(idade)
      
      Se(idade >= 16)entao
         Escreval("")
         Escreva("Sim! Você já pode votar!")
         Escreval("")
       Senao
         Escreval("")
         Escreva("Não! Você não pode votar ainda!")]
         Escreval("")
      FimSe
fimalgoritmo

